<div class='container'>
	<div class='col-md-8 col-md-offset-2'>
		<div class='form-area'>
			<h3>Post a Track</h3>
			<%= form_for @track do |a| %>
				<div class='form-group'>
				<%= a.label :body, 'Track Description' %>
				<%= a.text_area :body, rows: 3, class: 'form-control' %>
				</div>
				<%= a.submit class: 'btn btn-primary' %>
			<% end %>
		</div>
	</div>
</div>